@page
@model IndexModel
@{
    ViewData["Title"] = "Experience Authentic Italy";
}

<!-- Hero Section -->
<section class="hero">
    @* <!-- Video Carousel --> *@
    <div class="video-carousel-container">
        <div id="videoCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/colosseum.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/venice gondolas.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/florence duomo.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/cinque terre.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/trevi fountain.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="carousel-item">
                    <video class="d-block w-100" autoplay muted loop playsinline>
                        <source src="~/TourAgencyVideos/pisa.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>

    <div class="hero-content text-center">
        <h1>Discover <span class="text-warning">Italy</span> Like a Local</h1>
        <p class="lead">Private tours with expert guides in Rome, Venice, Florence & beyond</p>
        <div class="hero-buttons">
            <a href="/Tours" class="btn btn-outline-light btn-lg ms-3">Browse Tours</a>
            
        </div>
    </div>

    <!-- Services Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Our Services</h2>
                <p class="section-subtitle">Experience Italy like never before</p>
            </div>

            <div class="row g-4">
                <!-- Service Card 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card h-100 border-0 shadow">
                        <div class="card-icon bg-success text-white">
                            <i class="fas fa-map-marked-alt fa-3x"></i>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="card-title">Guided Tours</h3>
                            <p class="card-text">Expert-led tours through Italy's most iconic landmarks and hidden gems with skip-the-line access.</p>
                        </div>
                    </div>
                </div>

                <!-- Service Card 2 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card h-100 border-0 shadow">
                        <div class="card-icon bg-neutral text-white">
                            <i class="fas fa-utensils fa-3x"></i>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="card-title">Food Experiences</h3>
                            <p class="card-text">Authentic cooking classes, wine tastings, and gourmet tours with local chefs and sommeliers.</p>
                        </div>
                    </div>
                </div>

                <!-- Service Card 3 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card h-100 border-0 shadow">
                        <div class="card-icon bg-danger text-white">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="card-title">Planned Itineraries</h3>
                            <p class="card-text">Consult with one of our experts about planning your dream vacation.</p>
                        </div>
                    </div>
                </div>

                <!-- Add more service cards as needed -->
            </div>
        </div>
    </section>

    <div class="container my-5">
        <h2 class="text-center mb-4">Featured Italian Experiences</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card tour-card h-100">
                    <img src="~/Images/polignano a mare.jpg" class="card-img-top" alt="Rome">
                    <div class="card-body">
                        <h5 class="card-title">Puglian Summer</h5>
                        <p class="card-text">Submerse yourself in the underrated region of mediterranean bliss.</p>
                        <a href="/Tours/Details/3" class="btn btn-outline-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card tour-card h-100">
                    <img src="~/images/milan-cathedral.jpg" class="card-img-top" alt="Venice">
                    <div class="card-body">
                        <h5 class="card-title">Italy's Best</h5>
                        <p class="card-text">Discover the most stapled cities Italian cities in one trip.</p>
                        <a href="/Tours/Details/2" class="btn btn-outline-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card tour-card h-100">
                    <img src="https://images.pexels.com/photos/4179480/pexels-photo-4179480.jpeg" class="card-img-top" alt="Tuscany">
                    <div class="card-body">
                        <h5 class="card-title">Tuscan Delights</h5>
                        <p class="card-text">Wine tasting, world class renaissance art, and scenic countryside views in Italy's heartland.</p>
                        <a href="/Tours/Details/1" class="btn btn-outline-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">What Our Travelers Say</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <img src="~/Images/lizzie.jpg" class="rounded-circle mb-3" width="80" alt="Traveler">
                            <p class="card-text">"The Rome tour was incredible! Our guide knew all the hidden spots."</p>
                            <p class="text-muted">- Lizzie, Colombia</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <img src="https://randomuser.me/api/portraits/men/75.jpg" class="rounded-circle mb-3" width="80" alt="Traveler">
                            <p class="card-text">"Best way to experience authentic Italian culture. Highly recommend!"</p>
                            <p class="text-muted">- Michael, UK</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <img src="~/Images/anna.jpg" class="rounded-circle mb-3" width="80" alt="Traveler">
                            <p class="card-text">"Life changing experience! 10/10 agency!"</p>
                            <p class="text-muted">- Anna, Romania</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section py-5 position-relative overflow-hidden">
        <div class="container text-center position-relative z-index-1">
            <h2 class="display-4 fw-bold mb-3 text-white">Ready for Your Italian Adventure?</h2>
            <p class="lead mb-4 text-white-75">Sign up now and get <span class="text-warning fw-bold">10% off</span> your first tour!</p>
            <a href="/Identity/Account/Register" class="btn btn-light btn-lg px-4 py-3 rounded-pill shadow-sm">
                <i class="fas fa-arrow-right me-2"></i>Create Account
            </a>
        </div>

        <!-- Decorative elements -->
        <div class="position-absolute top-0 start-0 w-100 h-100">
            <div class="cta-overlay"></div>
        </div>
    </div>

    <style>
        .cta-section {
            background: linear-gradient(135deg, #2c3e50 0%, #4ca1af 100%);
            position: relative;
            overflow: hidden;
        }

        .cta-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://images.unsplash.com/photo-1498307833015-e7b400441eb8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            opacity: 0.15;
        }

        .z-index-1 {
            z-index: 1;
        }

        .cta-section .btn-light {
            background-color: rgba(255,255,255,0.9);
            border: none;
            transition: all 0.3s ease;
            font-weight: 600;
        }

            .cta-section .btn-light:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.2);
                background-color: white;
            }

        .text-white-75 {
            color: rgba(255,255,255,0.85);
        }
    </style>
</section>