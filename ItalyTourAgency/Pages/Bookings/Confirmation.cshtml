@page "{id:int}"
@model ItalyTourAgency.Pages.Bookings.ConfirmationModel

<h2>Booking Confirmed!</h2>
<p>Your booking reference: @Model.Booking.Id</p>
@if (Model.Booking?.TourInstance?.Tour != null)
{
    <p>Tour Dates: @Model.Booking.TourInstance.StartDate.ToShortDateString() - @Model.Booking.TourInstance.EndDate.ToShortDateString()</p>
}
<p>Group Size: @Model.Booking.GroupSize</p>
<p>Total Price: @Model.Booking.TotalPrice.ToString("C")</p>
<p>Payment Status: @Model.Booking.Status</p>