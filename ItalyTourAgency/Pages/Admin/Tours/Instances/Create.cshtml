@page
@model ItalyTourAgency.Pages_Admin_Tours_Instances.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h4>Create Tour Instance</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="TourInstance.Status" value="Open" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tour Selection -->
                <div class="form-group">
                    <label class="control-label">Tour Name</label>
                    <select asp-for="TourInstance.TourId"
                            class="form-control"
                            asp-items="ViewBag.TourId">
                        <option value="">-- Select Tour --</option>
                    </select>
                    <span asp-validation-for="TourInstance.TourId" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="form-group">
                    <label class="control-label">Start Date</label>
                    <input asp-for="TourInstance.StartDate"
                           class="form-control"
                           type="date" />
                    <span asp-validation-for="TourInstance.StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="form-group">
                    <label class="control-label">End Date</label>
                    <input asp-for="TourInstance.EndDate"
                           class="form-control"
                           type="date" />
                    <span asp-validation-for="TourInstance.EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>