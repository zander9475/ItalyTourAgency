@page
@model ItalyTourAgency.Pages.Admin.Tours.IndexModel

@{
    ViewData["Title"] = "Tours";
}

<div class="container">
    <h1 class="text-center mb-5">Tour Packages made just for you</h1>

    <div class="row">
        @foreach (var item in Model.Tour)
        {

            var imagePath = "/images/default-tour.jpg"; // Default image

            if (item.Name.Contains("Tuscan") || item.Name.Contains("Florence"))
            {
                imagePath = "~/images/tuscany countryside.jpg";
            }
            else if (item.Name.Contains("Italy's Best") || item.Name.Contains("Best"))
            {
                imagePath = "~/images/colosseum.jpg";
            }
            else if (item.Name.Contains("Puglia") || item.Name.Contains("Puglian"))
            {
                imagePath = "~/images/puglia.jpg";
            }
            else if (item.Name.Contains("Renaissance") || item.Name.Contains("Art"))
            {
                imagePath = "~/images/david.jpg";
            }
            else if (item.Name.Contains("Amalfi") || item.Name.Contains("Coast"))
            {
                imagePath = "~/images/amalfi-coast.jpg";
            }
            else if (item.Name.Contains("Northern") || item.Name.Contains("Culture"))
            {
                imagePath = "~/images/venice-bridge.jpg";
            }
            else if (item.Name.Contains("Sardinia") || item.Name.Contains("Sights"))
            {
                imagePath = "~/images/cala luna.jpg";
            }
            else if (item.Name.Contains("Sicily") || item.Name.Contains("Ragazzi"))
            {
                imagePath = "~/images/sicily.jpg";
            }
            else if (item.Name.Contains("Dolomites") || item.Name.Contains("Ski"))
            {
                imagePath = "~/images/dolomites.jpg";
            }

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 tour-card shadow-sm">
                    <!-- Image -->
                    <img src="@Url.Content(imagePath)" class="card-img-top" alt="@item.Name tour" style="height: 200px; object-fit: cover;">

                    <!-- Card Body - Main Content -->
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="fas fa-clock text-muted"></i> @item.Duration days</span>
                            <span class="text-primary fw-bold">$@item.Price</span>
                        </div>
                        <p class="card-text text-muted small">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                    </div>

                    <!-- Card Footer - Button -->
                    <div class="card-footer bg-transparent border-top-0">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">
                            <i class="fas fa-info-circle me-2"></i>View Details
                        </a>
                    </div>
                </div> <!-- End of card div -->
            </div>
        }
    </div>
</div>